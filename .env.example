# === LINE Bot ===
# 從 LINE Developers Console 取得
LINE_CHANNEL_ACCESS_TOKEN=your_real_token_here
LINE_CHANNEL_SECRET=your_real_secret_here

# === Claude AI ===
# 從 https://console.anthropic.com/ 取得
ANTHROPIC_API_KEY=sk-ant-xxxxx

# === Amadeus API（主要航班資料來源，強烈建議設定）===
# 免費註冊：https://developers.amadeus.com/
# 測試環境免費無限、正式環境 500 次/月免費
AMADEUS_CLIENT_ID=
AMADEUS_CLIENT_SECRET=
AMADEUS_PRODUCTION=false

# === 瀏覽器設定（RPA 備援用）===
BROWSER_HEADLESS=true
BROWSER_MAX_PAGES=3

# === 里程帳號（選填，查里程票用）===
CI_MEMBER_ID=
CI_MEMBER_PASSWORD=
BR_MEMBER_ID=
BR_MEMBER_PASSWORD=
JX_MEMBER_ID=
JX_MEMBER_PASSWORD=
EK_MEMBER_ID=
EK_MEMBER_PASSWORD=
TK_MEMBER_ID=
TK_MEMBER_PASSWORD=
CX_MEMBER_ID=
CX_MEMBER_PASSWORD=
SQ_MEMBER_ID=
SQ_MEMBER_PASSWORD=

# === 天氣查詢（選填）===
# 免費註冊：https://opendata.cwa.gov.tw/
CWA_API_KEY=

# === 新聞查詢（選填）===
# 免費註冊：https://newsapi.org/（免費 100 次/天）
NEWS_API_KEY=

# === Google Calendar（選填）===
# 建立 Service Account：https://console.cloud.google.com/
# 本地開發：下載 JSON key 後設定路徑
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=
# 雲端部署（Railway）：把 JSON key 整個內容貼上（單行）
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_CALENDAR_ID=
# 家庭行事曆，格式："名稱:calendarId,名稱:calendarId"
FAMILY_CALENDARS=

# === 每日晨報（選填）===
# 推送時間（HH:mm 格式，預設 07:00）
MORNING_BRIEFING_TIME=07:00
# 接收者 LINE userId，逗號分隔
BRIEFING_RECIPIENTS=
# 晨報天氣預設城市
DEFAULT_CITY=臺北市
# 時區
TZ=Asia/Taipei

# === Server ===
PORT=3000
NODE_ENV=production
